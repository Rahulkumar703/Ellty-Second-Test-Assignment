  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",

    "typeRoots": ["./src/types", "./node_modules/@types"],
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
